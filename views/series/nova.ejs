<%- include('../partials/header')%>
    <section id="about">
        <div class="container">
        <div class="row">
            <div class="col-lg-8 mx-auto">
            <h2>Séries</h2>
            <p class="lead">Nova série</p>
            <form method="post">
                <div class="form-group">
                    <label for="serie">Nome da série</label>
                    <input type="text" class="form-control" id="serie" name="name" aria-describedby="nameHelp" placeholder="Informe o nome da série">
                    <small id="nameHelp" class="form-text text-muted">Nome da série a ser salvo.</small>
                    <% if (errors && errors.indexOf('name') >= 0) { %>                        
                        <small id="nameHelp" class="form-text text-muted">Por favor, informe o nome da série.</small>
                    <% } %>
                </div>
                <div class="form-group">                
                    <label for="status">Situação</label>
                    <select class="form-control" id="status" name="status">
                        <option value="to-watch">Assistir</option>
                        <option value="watching">Assistindo</option>
                        <option value="watched">Assistido</option>                    
                    </select>
                </div>
                <button class="btn btn-primary">Salvar</button>
            </form>
            </div>
        </div>
        </div>
    </section>
<%- include('../partials/footer') %>
